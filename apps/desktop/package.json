{
  "name": "@path402/desktop",
  "version": "4.0.0-alpha.3",
  "private": true,
  "description": "Path402 Desktop Client - Electron wrapper",
  "author": "b0ase <b0ase@path402.com>",
  "homepage": "https://path402.com",
  "type": "commonjs",
  "main": "dist/main.js",
  "scripts": {
    "build": "esbuild src/main.ts src/preload.ts --bundle --platform=node --target=node22 --outdir=dist --external:electron --external:better-sqlite3 --external:@path402/htm --format=cjs && cp ../../packages/core/src/db/schema.sql dist/schema.sql",
    "build:electron": "pnpm build",
    "dev": "esbuild src/main.ts src/preload.ts --bundle --platform=node --target=node22 --outdir=dist --external:electron --external:better-sqlite3 --external:@path402/htm --format=cjs --watch",
    "start": "electron dist/main.js",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:mac": "electron-builder --mac",
    "dist:win": "bash scripts/dist-cross.sh --win",
    "dist:linux": "bash scripts/dist-cross.sh --linux",
    "dist:all": "bash scripts/dist-cross.sh --linux && bash scripts/dist-cross.sh --win && electron-builder --mac"
  },
  "dependencies": {
    "@path402/core": "workspace:*",
    "@path402/htm": "workspace:*",
    "@anthropic-ai/sdk": "^0.39.0",
    "@babbage/sdk": "^0.4.48",
    "@modelcontextprotocol/sdk": "^1.12.1",
    "@supabase/supabase-js": "^2.94.0",
    "better-sqlite3": "^11.8.0",
    "bsv": "^2.0.10",
    "express": "^4.21.0",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "electron": "33.4.11",
    "electron-builder": "^25.0.0",
    "typescript": "^5.7.0"
  },
  "build": {
    "appId": "com.path402.client",
    "productName": "path402",
    "copyright": "Copyright Â© 2026 b0ase",
    "directories": {
      "output": "release",
      "buildResources": "../../build"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "../web/out",
        "to": "web/out"
      },
      {
        "from": "../../packages/core/src/db/schema.sql",
        "to": "db/schema.sql"
      },
      {
        "from": "../../packages/core/demo-content",
        "to": "demo-content"
      }
    ],
    "mac": {
      "category": "public.app-category.finance",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "darkModeSupport": true,
      "identity": "Richard Boase (ZQ4NX9NJ89)",
      "notarize": true
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Finance",
      "artifactName": "path402-client-${version}-${arch}.${ext}",
      "executableName": "path402-client"
    },
    "publish": {
      "provider": "github",
      "owner": "b0ase",
      "repo": "path402"
    }
  }
}