<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer glow ring -->
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="#50FF6600" />
            <solid android:color="#FF161616" />
            <corners android:radius="12dp" />
        </shape>
    </item>
    <!-- Inner top gradient for depth -->
    <item
        android:top="1dp"
        android:left="1dp"
        android:right="1dp"
        android:bottom="1dp">
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="270"
                android:startColor="#10FF6600"
                android:endColor="#00000000" />
            <corners android:radius="11dp" />
        </shape>
    </item>
</layer-list>
