<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_card"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Warning label -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="PRIVATE KEY â€” DO NOT SHARE"
        android:textColor="@color/red_error"
        android:textSize="@dimen/text_label"
        android:textStyle="bold" />

    <!-- QR code image -->
    <ImageView
        android:id="@+id/qr_image"
        android:layout_width="260dp"
        android:layout_height="260dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/white"
        android:contentDescription="WIF QR Code"
        android:padding="8dp"
        android:scaleType="fitCenter" />

    <!-- WIF text -->
    <TextView
        android:id="@+id/qr_wif_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="monospace"
        android:gravity="center"
        android:textColor="@color/text_secondary"
        android:textIsSelectable="true"
        android:textSize="@dimen/text_mono_small" />

    <!-- Close button -->
    <Button
        android:id="@+id/qr_close_button"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_outlined_orange"
        android:text="Close"
        android:textColor="@color/text_primary"
        android:textSize="14sp"
        android:fontFamily="sans-serif"
        android:textAllCaps="false" />

</LinearLayout>
