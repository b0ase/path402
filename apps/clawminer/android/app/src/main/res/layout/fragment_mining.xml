<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_black"
    android:fillViewport="true"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="16dp"
        android:paddingBottom="16dp">

        <!-- ════════════════════════════════════════════
             MINING CARD — Hero numbers
             ════════════════════════════════════════════ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/card_margin_horizontal"
            android:background="@drawable/card_background_hero"
            android:orientation="vertical"
            android:padding="@dimen/card_padding">

            <!-- Section label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="@string/header_mining"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/text_section_header"
                android:textStyle="bold" />

            <!-- Mining progress bar -->
            <ProgressBar
                android:id="@+id/mining_progress"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/progress_bar_height"
                android:layout_marginTop="12dp"
                android:max="100"
                android:progressDrawable="@drawable/progress_bar_orange" />

            <!-- Big numbers row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <!-- Blocks Mined -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:textStyle="bold"
                        android:text="BLOCKS MINED"
                        android:textColor="@color/text_secondary"
                        android:textSize="@dimen/text_label" />

                    <TextView
                        android:id="@+id/blocks_mined_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="monospace"
                        android:text="0"
                        android:textColor="@color/text_primary"
                        android:textSize="@dimen/text_value"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Mempool -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:textStyle="bold"
                        android:text="MEMPOOL"
                        android:textColor="@color/text_secondary"
                        android:textSize="@dimen/text_label" />

                    <TextView
                        android:id="@+id/mempool_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="monospace"
                        android:text="0"
                        android:textColor="@color/text_secondary"
                        android:textSize="@dimen/text_value"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- ════════════════════════════════════════════
             MINING TOGGLE BUTTON
             ════════════════════════════════════════════ -->
        <Button
            android:id="@+id/mining_toggle_btn"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginHorizontal="@dimen/card_margin_horizontal"
            android:layout_marginTop="@dimen/card_margin_vertical"
            android:background="@drawable/button_outlined_orange"
            android:fontFamily="sans-serif"
            android:text="Start Mining"
            android:textColor="@color/green_active"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textAllCaps="false" />

        <!-- ════════════════════════════════════════════
             HEADER SYNC CARD
             ════════════════════════════════════════════ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/card_margin_horizontal"
            android:layout_marginTop="@dimen/card_margin_vertical"
            android:background="@drawable/card_background"
            android:orientation="vertical"
            android:padding="@dimen/card_padding">

            <!-- Label + status row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif"
                    android:text="@string/header_sync"
                    android:textColor="@color/orange_primary"
                    android:textSize="@dimen/text_section_header"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/sync_status_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="monospace"
                    android:textColor="@color/green_active"
                    android:textSize="@dimen/text_label" />
            </LinearLayout>

            <!-- Big percentage -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/sync_percent_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="monospace"
                    android:text="0.0%"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_value_small"
                    android:textStyle="bold" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/sync_height_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="monospace"
                    android:textColor="@color/text_secondary"
                    android:textSize="@dimen/text_mono_small" />
            </LinearLayout>

            <!-- Progress bar -->
            <ProgressBar
                android:id="@+id/sync_progress"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/progress_bar_height_large"
                android:layout_marginTop="10dp"
                android:max="1000"
                android:progressDrawable="@drawable/progress_bar_green" />
        </LinearLayout>

        <!-- ════════════════════════════════════════════
             RECENT BLOCKS CARD
             ════════════════════════════════════════════ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/card_margin_horizontal"
            android:layout_marginTop="@dimen/card_margin_vertical"
            android:background="@drawable/card_background"
            android:orientation="vertical"
            android:padding="@dimen/card_padding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="RECENT BLOCKS"
                android:textColor="@color/orange_primary"
                android:textSize="@dimen/text_section_header"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/blocks_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="vertical" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>
