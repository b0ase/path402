<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_black"
    android:fillViewport="true"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="16dp">

        <!-- ════════════════════════════════════════════
             HERO HEADER — Logo + Brand + Status
             ════════════════════════════════════════════ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/header_background"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingTop="20dp"
            android:paddingBottom="16dp">

            <!-- Crab logo -->
            <ImageView
                android:layout_width="@dimen/hero_icon_size"
                android:layout_height="@dimen/hero_icon_size"
                android:src="@mipmap/ic_launcher"
                android:contentDescription="@string/app_name" />

            <!-- Brand name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif"
                android:letterSpacing="0.05"
                android:text="@string/splash_title"
                android:textColor="@color/orange_primary"
                android:textSize="@dimen/text_title"
                android:textStyle="bold" />

            <!-- Subtitle + version -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="monospace"
                    android:text="@string/splash_subtitle"
                    android:textColor="@color/text_secondary"
                    android:textSize="@dimen/text_label" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:fontFamily="monospace"
                    android:text="|"
                    android:textColor="#FF333333"
                    android:textSize="@dimen/text_label" />

                <TextView
                    android:id="@+id/version_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:fontFamily="monospace"
                    android:textColor="@color/text_secondary"
                    android:textSize="@dimen/text_label" />
            </LinearLayout>

            <!-- Node ID -->
            <TextView
                android:id="@+id/node_id_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="monospace"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/text_mono_small" />
        </LinearLayout>

        <!-- Orange gradient divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/divider_gradient" />

        <!-- ════════════════════════════════════════════
             QUICK STATS ROW — Uptime | Peers | Hash Rate
             ════════════════════════════════════════════ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/card_margin_horizontal"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <!-- Uptime -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:background="@drawable/stat_box_background"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingVertical="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:textStyle="bold"
                    android:text="UPTIME"
                    android:textColor="@color/text_secondary"
                    android:textSize="@dimen/text_label" />

                <TextView
                    android:id="@+id/uptime_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:fontFamily="monospace"
                    android:text="0s"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_body"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Peers -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="4dp"
                android:layout_weight="1"
                android:background="@drawable/stat_box_background"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingVertical="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:textStyle="bold"
                    android:text="PEERS"
                    android:textColor="@color/text_secondary"
                    android:textSize="@dimen/text_label" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <View
                        android:id="@+id/status_dot"
                        android:layout_width="6dp"
                        android:layout_height="6dp"
                        android:layout_marginEnd="5dp"
                        android:background="@drawable/status_dot_green" />

                    <TextView
                        android:id="@+id/peers_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="monospace"
                        android:text="0"
                        android:textColor="@color/text_primary"
                        android:textSize="@dimen/text_body"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <!-- Hash Rate -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_weight="1"
                android:background="@drawable/stat_box_background"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingVertical="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:textStyle="bold"
                    android:text="HASH RATE"
                    android:textColor="@color/text_secondary"
                    android:textSize="@dimen/text_label" />

                <TextView
                    android:id="@+id/hash_rate_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:fontFamily="monospace"
                    android:text="0 H/s"
                    android:textColor="@color/orange_primary"
                    android:textSize="@dimen/text_body"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <!-- Bottom branding -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="monospace"
            android:gravity="center"
            android:text="clawminer.store | b0x402.com\nBuilt by The Bitcoin Corporation"
            android:textColor="#FF222222"
            android:textSize="@dimen/text_label" />

    </LinearLayout>

</ScrollView>
